<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.skilledanswers.tnpay.flowactivities.MyProfile">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="0dp"
        android:id="@+id/MyProfileTextView"
        android:text="My Profile"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_bg"
        android:orientation="vertical">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingTop="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:id="@+id/myprofilefristname"
                android:text="First Name"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/my_profile_fname"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:lines="1"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textColor="@color/black"
                android:text="Nishanth"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:paddingTop="16dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:id="@+id/myprofilelastname"
                android:text="Last Name"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/my_profile_lname"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:lines="1"
                android:textColor="@color/black"
                android:text="nishanth@gmail.com"/>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/my_profile_edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:layout_marginBottom="5dp"
            app:backgroundTint="@color/colorPrimaryDark"
            android:clickable="true"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/rect_bg"
        android:orientation="vertical">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/old"
                android:text="Old"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/my_profile_pwd_old"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:inputType="textPassword"
                android:textColor="@color/black"
        />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/newtext"
                android:text="New"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/my_profile_pwd_new"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/black"
                android:inputType="textPassword"
               />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/confirm"
                android:text="Confirm"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/my_profile_pwd_confirm"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:inputType="textPassword"
                android:textColor="@color/black"
               />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/my_profile_change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Change Password"
            android:layout_marginBottom="5dp"
            app:backgroundTint="@color/colorPrimaryDark"
            android:clickable="true"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"/>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
