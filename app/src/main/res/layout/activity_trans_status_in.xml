<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" >
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_trans_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.traknpay.wallet.flowactivities.TransStatusPayIn">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/trans_status_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_150"
        android:layout_marginBottom="@dimen/s_5"
        android:src="@drawable/ic_successnew"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/trans_status_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@color/colorPrimaryDark"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/trans_status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s_16"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/trans_status_ref_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/trans_status_payment_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/s_10"
        android:layout_marginBottom="@dimen/s_10"
        android:textColor="@color/colorPrimary"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/s_16"
        android:background="#DFDFE4"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/trans_status_avilable_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/s_20"
            android:textColor="@color/colorPrimary"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/trans_status_add_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s_16"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/s_16"
        android:text="@string/add_more"
        app:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"                        android:layout_margin="10dp"
        android:textColor="@android:color/white"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/trans_status_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s_16"
        android:layout_marginRight="@dimen/s_16"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/s_16"
        android:text="@string/pay_will_be_added_soon"
        app:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"                        android:layout_margin="10dp"
        android:textColor="@android:color/white"/>
</android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>
