<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context=".logactivities.Otp">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/instant"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:text="You would receive OTP over SMS. Please key in the same below."/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"

            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext1"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="1"
                android:lines="1"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext2"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/rectangle_border"
                android:gravity="center"
                android:maxLength="1"

                android:lines="1"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext3"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="1"

                android:lines="1"
                android:background="@drawable/rectangle_border"
                android:gravity="center"

                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext4"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="1"

                android:lines="1"
                android:gravity="center"
                android:background="@drawable/rectangle_border"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext5"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="1"

                android:lines="1"
                android:gravity="center"
                android:background="@drawable/rectangle_border"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"


            >
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext6"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLength="1"

                android:lines="1"
                android:gravity="center"
                android:background="@drawable/rectangle_border"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/otp_timer_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U will reciver OTP within "/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/otp_timer_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="0"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" seconds."/>




    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:visibility="gone"
        android:id="@+id/otp_resend_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Didnâ€™t receive OTP ?"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="3dp"
            style="?android:singleLine"
            android:text="Resend OTP"/>
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submit_otp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="Submit"/>
</android.support.v7.widget.LinearLayoutCompat>
