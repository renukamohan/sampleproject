<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5"
    tools:context="com.traknpay.wallet.flowactivities.LoadOrPay">


<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="0dp"
    android:layout_weight="2"
    android:id="@+id/loadorpay_loadmoneyButton_id"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pay_in"

        android:textColor="@android:color/white"/>
    <android.support.v7.widget.AppCompatTextView
        android:text="@string/load_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/colorAccent"
        android:padding="@dimen/s_16"
        android:gravity="center"
        android:id="@+id/load_cash_textView"
        android:layout_centerHorizontal="true"
       />
    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.AppCompatTextView
        android:text="OR"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:padding="@dimen/s_16"
        android:gravity="center"
        android:id="@+id/textView2" />
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/loadorpay_paymoneyButton_id"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pay_out"
        android:textColor="@android:color/white"/>
        <android.support.v7.widget.AppCompatTextView
            android:text="@string/pay_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:padding="@dimen/s_16"
            android:id="@+id/pay_cash_textView"
            android:layout_centerHorizontal="true"
            />
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>
