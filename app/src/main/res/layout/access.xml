<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Allow us to access"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/access"
        android:text="SMS"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/smsmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/sms"
        android:text="To securely verify your mobile number"
        android:textStyle="normal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/smsmsg"
        android:text="SMS"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/phonemsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_below="@+id/phone"
        android:text="To verifyyour phone with UPI"
        android:textStyle="normal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        />


    <Button
        android:id="@+id/getstarted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Let's Get Started"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />



</RelativeLayout>